<form class="box" action="/placemark/{{placemark._id}}/addplace" method="POST">
    <label>Enter Place Details:</label>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <input class="input" type="text" placeholder="Enter PlaceMark" name="name">
            </div>
            <div class="field">
                <input class="input" type="text" placeholder="Enter Destination" name="location">
            </div>
            <div class="field">
                <input class="input" type="text" placeholder="Enter Things we need to know" name="info">
            </div>
        </div>
    </div>
    <button class="button is-primary">Add Place</button>
</form>
