<table class="table is-fullwidth">
    <thead>
    <tr>
        <th>PlaceMark</th>
        <th>Destination</th>
        <th>Things we Should know</th>
    </tr>
    </thead>
    <tbody>
    {{#each placemark.places}}
        <tr>
            <td>
                {{name}}
            </td>
            <td>
                {{location}}
            </td>
            <td>
                {{info}}
            </td>
            <td>
                <a href="/placemark/{{../placemark._id}}/deleteplace/{{_id}}" class="ui icon button">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>