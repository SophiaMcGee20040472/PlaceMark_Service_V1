<table class="table is-fullwidth has-background-warning-light">
    <thead>
    <tr>
        <th>PlaceMark</th>
        <th>Destination</th>
        <th>Species Spotted</th>
        <th>Latitude</th>
        <th>Longitude</th>
    </tr>
    </thead>
    <tbody>
     {{#each placemarks}}
        <tr>
            <td>
              {{name}}
            </td>
            <td>
                {{location}}
            </td>
            <td>
                {{info}}
            </td>
            <td>
                {{lat}}
            </td>
            <td>
                {{lng}}
            </td>
          <td>
          </td>
        <td>
          <p>  Edit Privacy & Placemark</p>
          <a href="/placemark/{{../category._id}}/placemark/{{_id}}" class="ui icon button has-background-success">
            <i class="fas fa-edit has-text-white"></i>
          </a>
            <a href="/placemark/{{../category._id}}/deleteplacemark/{{_id}}" class="ui icon button has-background-danger">
              <i class="fas fa-trash"></i>
            </a>
          <a onclick="imageTarget('{{_id}}', '{{name}}')" class="ui icon button has-background-grey">Load<i class="fa-solid fa-arrow-up-from-bracket"></i></a>
          <a onclick="showImage('{{_id}}')" class="ui icon button has-background-info">View</a>
         <br>
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSg2u3CV7wvoNj9sWwDn2IhXFbLjveeIweMo1BdbuRn9VcPinRhMN61yQAKOHbFedo0z6A&usqp=CAU" width="20"
               height="20" /><br>
          <p>Leave Review</p>
        </td>
          </tr>
          <div id="placemark-image-{{_id}}" style="display:none"><img src="{{img}}"/></div>
    {{/each}}

    </tbody>
</table>
