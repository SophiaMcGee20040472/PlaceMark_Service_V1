
  <table class="table is-fullwidth has-background-info-light">
    <thead>
    <tr>
      <th>PlaceMark</th>
      <th>Destination</th>
      <th>Species Spotted</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Public</th>
    </tr>
    </thead>
    <tbody>
    {{#ifCond this user}}
    {{#each category.placemarks}}
      {{#if visible}}
      {{else}}
      <tr>
        <td>
          {{name}}
        </td>
        <td>
          {{location}}
        </td>
        <td>
          {{info}}
        </td>
        <td>
          {{lat}}
        </td>
        <td>
          {{lng}}
        </td>
        <td>
        {{visible}}
        </td>
        <td>
          <a href="/placemark/{{../category._id}}/placemark/{{_id}}" class="ui icon button has-background-success">
            <i class="fas fa-edit has-text-white">Private</i>
          </a>
        </td>
        <td>
      <div id="placemark-image-{{_id}}" style="display:none"><img src="{{img}}"/></div>
      {{/if}}
    {{/each}}
    {{/ifCond}}
    </tbody>
  </table>

